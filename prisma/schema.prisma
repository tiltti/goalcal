generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DayEntry {
  id        Int      @id @default(autoincrement())
  date      DateTime @unique
  year      Int
  month     Int
  day       Int

  // Tavoitteet
  noSubstances Boolean @default(false)  // ei päihteitä
  exercise     Boolean @default(false)  // liikunta
  writing      Boolean @default(false)  // kirjoittaminen

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([year])
  @@index([year, month])
}
